<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="translatorImport">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="sources">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="source" type="SourceType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="translateProviders">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="translateProvider" type="TranslateProviderType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="words">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="word" type="WordType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="wordsToSourceLink">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="link" type="WordToSourceLinkType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="translates">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="translate" type="TranslateType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="users">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="user" type="UserType"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="SourceType">
        <xs:attribute name="id"      type="xs:positiveInteger"/>
        <xs:attribute name="author"  type="xs:string"/>
        <xs:attribute name="title"   type="xs:string"/>
        <xs:attribute name="rawName" type="xs:string"/>
        <xs:attribute name="type"    type="xs:token"/>
        <xs:attribute name="contentHash" type="xs:token"/>
        <xs:attribute name="wordsCount"  type="xs:nonNegativeInteger"/>
    </xs:complexType>

    <xs:complexType name="TranslateProviderType">
        <xs:attribute name="id"   type="xs:positiveInteger"/>
        <xs:attribute name="name" type="xs:string"/>
    </xs:complexType>

    <xs:complexType name="WordType">
        <xs:attribute name="id"           type="xs:positiveInteger"/>
        <xs:attribute name="name"         type="xs:string"/>
        <xs:attribute name="blackList"    type="xs:boolean"/>
        <xs:attribute name="frequence"    type="xs:positiveInteger"/>
        <xs:attribute name="sourcesCount" type="xs:positiveInteger"/>
    </xs:complexType>

    <xs:complexType name="WordToSourceLinkType">
        <xs:attribute name="wordId"   type="xs:positiveInteger"/>
        <xs:attribute name="sourceId" type="xs:positiveInteger"/>
        <xs:attribute name="count"    type="xs:positiveInteger"/>
    </xs:complexType>

    <xs:complexType name="TranslateType">
        <xs:attribute name="wordId"   type="xs:positiveInteger"/>
        <xs:attribute name="sourceId" type="xs:positiveInteger"/>
        <xs:attribute name="value"    type="xs:string"/>
    </xs:complexType>

    <xs:complexType name="UserType">
        <xs:sequence>
            <xs:element name="rememberedWords">
                <xs:complexType>
                    <xs:sequence maxOccurs="unbounded">
                        <xs:element name="word">
                            <xs:complexType>
                                <xs:attribute name="id" type="xs:positiveInteger"/>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="email" type="xs:string"/>
    </xs:complexType>
</xs:schema>