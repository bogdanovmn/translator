{{#layout}}

<div class="container">
	<h1>Изменение профиля "{{userName}}"</h1>

	{{>inc/error_msg}}

	<div class=form>
		<form method=post>
			<div class="form-group">
				<label for=currentPassword>Текущий пароль</label>
				<input id=currentPassword
					   type=password
					   class="form-control"
					   name=currentPassword
					   value='{{userSettingsForm.currentPassword}}'>
				<small class="text-danger">{{formError.currentPassword}}</small>
			</div>

			<div class="form-group">
				<label for=newPassword>Новый пароль</label>
				<input id=newPassword
					   type=password
					   class="form-control"
					   name=newPassword
					   placeholder="NewПар0ль1"
					   value='{{userSettingsForm.newPassword}}'>
				<small class="text-danger">{{formError.newPassword}}</small>
			</div>

			<div class="form-group">
				<label for=newPasswordConfirm>Новый пароль</label>
				<input id=newPasswordConfirm
					   type=password
					   class="form-control"
					   name=newPasswordConfirm
					   placeholder="NewПар0ль1"
					   value='{{userSettingsForm.newPasswordConfirm}}'>
				<small class="text-danger">{{formError.newPasswordConfirm}}</small>
			</div>


			<div class="form-group">
				<label for=email>Email</label>
				<p id=email>{{userEmail}}</p>
			</div>

			<div class="form-group">
				<label for=regDate>Дата регистрации</label>
				<p id=regDate>{{userRegistrationDate}}</p>
			</div>

			<input type=submit class="btn btn-danger" value='Сохранить'>
			<a class="btn btn-outline-secondary" href="{{referer}}">Отмена</a>
		</form>
	</div>
</div>
{{/layout}}

