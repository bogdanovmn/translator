				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.github.bogdanovmn.translator</groupId>
				<artifactId>translator-orm-core</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.github.bogdanovmn.translator</groupId>
				<artifactId>translator-etl-allitbooks-orm</artifactId>
